<div class="comments-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h1> Comments </h1>
        <% comments.each_node do |comment| %>
        <div class='media comment'>
        <div class="media-body">
          <h4 class="media-heading">
            <%= comment.user.name %>
            <small>
              <%= comment.created_at %>
            </small>
          </h4>
          <div class="comment-body">
            <%= comment.body %>
          </div>
          <div class="post-meta">
             <span class="counters">
               <%= comment.votes_count %>
             </span>
          </div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
